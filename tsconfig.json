{
  "compilerOptions": {
    "target": "ESNext",
    "types": ["vitest/globals"],
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/components/langchain-cc/**/*.ts",
    "vite.config.ts",
    "src/main.tsx",
    "server.ts",
    "src/global.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "src/**/*.test.tsx",
    "src/components/Proto/apps"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
